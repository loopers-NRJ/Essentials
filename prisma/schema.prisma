// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  image     String
  addressId String?   @db.ObjectId
  createdAt DateTime? @default(now())
}

model Admins {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  image     String
  addressId String?   @db.ObjectId
  createdAt DateTime? @default(now())
}

model Address {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @unique @db.ObjectId
  address   String
  mobile    String
  createdAt DateTime? @default(now())
}

model Orders {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @db.ObjectId
  products  Json[] // {productId: String, varientId: Int, quantity: Int }
  total     Float
  status    String    @default("pending")
  createdAt DateTime? @default(now())
}

model Products {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  category      String[]
  price         Float
  numberInStock Int
  images        String[]
  createdAt     DateTime? @default(now())
}

model ProductVarients {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  productId     String    @db.ObjectId
  images        String[]
  price         Float
  numberInStock Int
  color         String?
  ingredient    String?
  createdAt     DateTime? @default(now())
}

model Discount {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  description      String?
  discount_percent Float
  active           Boolean
  created_at       DateTime? @default(now())
}

model Comments {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  productId String    @db.ObjectId
  userId    String    @db.ObjectId
  comment   String
  createdAt DateTime? @default(now())
}

model Category {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  value     String
  createdAt DateTime? @default(now())
}
